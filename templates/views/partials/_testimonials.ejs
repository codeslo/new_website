<% for(var i=0; i < locals.Testimonials.length; i++) { %>
    <div class="oc-item">
 <div class="testimonial">
     <div class="testi-image">
        <% if(Testimonials[i].image.secure_url){ %>            
             <img src="<%= Testimonials[i].image.secure_url %>">
        <% } else { %>
            <img src="/codeslo-custom/images/testimonials/testimonial-head.jpg">        
        <% }; %>         
     </div>
     <div class="testi-content">
         <p><%= Testimonials[i].quote %></p>
         <div class="testi-meta">
             <%= Testimonials[i].name %>
             <span><%= Testimonials[i].title %></span>
         </div>
     </div>
 </div>
</div>

<% } %>